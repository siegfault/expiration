
<%= form_for @food do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  <%= f.error_message_on :name %>
  <br />

  <%= f.label :expiration %>:
  <%= f.date_field :expiration %>
  <%= f.error_message_on :expiration %>
  <br />

  <%= f.label :eaten %>:
  <%= f.date_field :eaten_on %>
  <%= f.error_message_on :eaten_on %>
  <br />

  <%= f.label :tashed %>:
  <%= f.date_field :trashed_on %>
  <%= f.error_message_on :trashed_on %>
  <br />

  <%= f.submit %>
<% end %>
