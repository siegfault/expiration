<%= error_messages_for @food, class: 'alert-danger' %>

<%= form_for @food do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :expiration %>:
  <%= f.date_field :expiration %><br />

  <%= f.label :eaten %>:
  <%= f.date_field :eaten_on %><br />

  <%= f.label :tashed %>:
  <%= f.date_field :trashed_on %><br />

  <%= f.submit %>
<% end %>
